# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database?schema=public
# For local development: postgresql://postgres:password@localhost:5432/saas_starter?schema=public
DATABASE_URL="postgresql://user:password@localhost:5432/saas_starter?schema=public"

# ============================================
# JWT Authentication
# ============================================
# Secret keys for JWT token signing
# Generate secure keys with: openssl rand -base64 32
# IMPORTANT: Use different secrets for production!
JWT_SECRET="your-jwt-secret-key-here-generate-with-openssl-rand-base64-32"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-here-generate-with-openssl-rand-base64-32"

# ============================================
# Stripe Configuration
# ============================================
# Stripe API keys - Get from https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development
# Use live keys (sk_live_...) for production
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"

# Stripe webhook secret - Get from Stripe Dashboard > Webhooks
# This is used to verify webhook requests are from Stripe
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Stripe Price IDs - Create products and prices in Stripe Dashboard
# These are the price IDs for your monthly and yearly subscription plans
STRIPE_MONTHLY_PRICE_ID="price_your_monthly_price_id_here"
STRIPE_YEARLY_PRICE_ID="price_your_yearly_price_id_here"

# ============================================
# Application Configuration
# ============================================
# Public URL of your application
# For local development: http://localhost:3000
# For production: https://yourdomain.com
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# Optional: Redis (for production scaling)
# ============================================
# Uncomment when you need Redis for distributed rate limiting
# REDIS_URL="redis://localhost:6379"

# ============================================
# Optional: Logging Service
# ============================================
# Uncomment when integrating with logging service
# LOG_LEVEL="info"
# SENTRY_DSN="your-sentry-dsn-here"

